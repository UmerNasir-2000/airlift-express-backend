generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classifications {
  id        Int      @id @default(autoincrement())
  name      String
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  modules Modules[] 

  @@map("classifications")
}

model Modules {
  id               Int             @id @default(autoincrement())
  name             String
  imageUrl         String          @map("image_url")
  createdAt        DateTime        @default(now()) @map("created_at")
  classification   Classifications @relation(fields: [ classificationId ], references: [ id ])
  classificationId Int
  categories Categories[]

  @@map("modules")
}


model Categories {
  id               Int             @id @default(autoincrement())
  name             String
  imageUrl         String          @map("image_url")
  createdAt        DateTime        @default(now()) @map("created_at")
  modules          Modules         @relation(fields: [ moduleId ], references: [ id ])
  moduleId         Int
  subCategories    SubCategories[]

  @@map("categories")
}

model SubCategories {
  id               Int             @id @default(autoincrement())
  name             String
  imageUrl         String          @map("image_url")
  createdAt        DateTime        @default(now()) @map("created_at")
  categories       Categories      @relation(fields: [ categoryId ], references: [ id ])
  categoryId       Int
  products         Products[]
  
  @@map("sub_categories")
}

model Products {
  id               Int             @id @default(autoincrement())
  name             String
  description      String          @map("image_url")
  isImported       Boolean         @default(false) @map("is_imported")
  isDisplay        Boolean         @default(false) @map("is_display")
  subCategories    SubCategories   @relation(fields: [ subCategoryId ], references: [ id ])
  subCategoryId    Int
  
  @@map("products")
}








